<!DOCTYPE html>
<html>
  <head>
    <title>Relevamientos ART</title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
  </head>
  <body>
    <header class='navbar navbar-default navbar-static-top'>
      <nav class='container' role='navigation'>
        <div class='navbar-header'>
          <a href='/' class='navbar-brand'>Relevamientos - ART</a>
          <button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='.navbar-collapse'>
            <span class='sr-only'>Toggle navigation</span>
            <span class='icon-bar'></span>
            <span class='icon-bar'></span>
            <span class='icon-bar'></span>
          </button>
        </div>

        <ul class='nav navbar-nav navbar-center collapse navbar-collapse'>
          <li><a href='#'>Inicio</a></li>
          <li><a href='#'>Gestión de Usuarios</a></li>
          <li><a href='#'>Tareas</a></li>
          <li><a href='#'>Visitas</a></li>
          <li><a href='#'>Consultas</a></li>
        </ul>

        <% if user_signed_in? %>
            <ul class='nav navbar-nav navbar-right collapse navbar-collapse'>
              <li class='dropdown'>
                <a href='/me' data-target='#' class='dropdown-toggle' data-toggle='dropdown'><strong><%= current_user.email %></strong><span class='caret'></span></a>
                <ul class='dropdown-menu' role='menu'>
                  <li><%= link_to edit_user_registration_path do %>
                        <%= raw("Mi Perfil" + "&nbsp;&nbsp") %><i class="glyphicon glyphicon-user"></i>
                    <% end %>
                  </li>
                  <li><%= link_to destroy_user_session_path, method: :delete do %>
                        <%= raw("Salir" + "&nbsp;&nbsp") %><i class="glyphicon glyphicon-log-out"></i>
                    <% end %>
                  </li>
                </ul>
              </li>
            </ul>
        <% else %>
            <ul class='nav navbar-nav navbar-right collapse navbar-collapse'>
              <li><a href='/login' data-target='#' class='dropdown-toggle' data-toggle='dropdown'>Iniciar Sesión</a></li>
            </ul>
        <% end %>
      </nav>
    </header>

    <div class="container">
      <%= flash_messages %>

      <%= yield %>
    </div><!-- /container -->
  </body>
</html>